<Window x:Class="PeletonSoft.Sketch.View.WorkspaceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behavior1="clr-namespace:PeletonSoft.Tools.View.Behavior;assembly=Tools.View"
        xmlns:work1="clr-namespace:PeletonSoft.Sketch.View.Controls.Work"
        DataContext="{DynamicResource WorkspaceModelView}"
        Title ="Эскизы"
        Height="549.658" Width="1168.421"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Sketch.View;component/Dictionary/WorkspaceViewModel.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <i:Interaction.Behaviors>
        <behavior1:OnLoadBehavior Command="{Binding RestoreCommand}"/>
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <work1:ToolbarView Grid.Row="0" />
        <work1:WorkAreaView Grid.Row="1"/>
        
    </Grid>

</Window>
