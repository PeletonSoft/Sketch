<controls1:ImageSourceUserControl x:Class="PeletonSoft.Sketch.View.Controls.Element.View.ElementTileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:presentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             xmlns:controls1="clr-namespace:PeletonSoft.Tools.View.Controls;assembly=Tools.View"
             mc:Ignorable="d" Name="UserControl"
             d:DesignHeight="36" d:DesignWidth="336">
    <Grid >
        <Rectangle
            Stretch="UniformToFill" >
            <Rectangle.Fill>
                <ImageBrush presentationOptions:Freeze="True" Viewport="0,0,25,25"
                            ImageSource="{Binding ImageSource,ElementName=UserControl}"
                            ViewportUnits="Absolute" TileMode="Tile"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>

</controls1:ImageSourceUserControl>
