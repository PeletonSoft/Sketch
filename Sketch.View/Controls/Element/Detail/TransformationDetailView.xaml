<UserControl x:Class="PeletonSoft.Sketch.View.Controls.Element.Detail.TransformationDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:geometry="clr-namespace:PeletonSoft.Sketch.ViewModel.Geometry;assembly=Sketch.ViewModel"
             xmlns:detail="clr-namespace:PeletonSoft.Sketch.View.Controls.Element.Detail"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance geometry:TransformationViewModel}"
             d:DesignHeight="100" d:DesignWidth="600">
    <WrapPanel>
        <GroupBox Header="Вращение">
            <detail:RotationDetailView/>
        </GroupBox>
        <GroupBox Header="Отражение">
            <detail:ReflectionDetailView/>
        </GroupBox>
    </WrapPanel>
</UserControl>
